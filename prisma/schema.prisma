generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id Int @id @default(autoincrement())

  description String
  done        Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?

  @@map("tasks")
}
